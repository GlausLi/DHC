<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round15_white"
    android:padding="@dimen/margin_padding_size_medium"
    android:layout_marginTop="@dimen/margin_padding_size_small"
    android:layout_marginBottom="@dimen/margin_padding_size_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_date"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_counseling"
            style="@style/btn_style_small"
            android:text="@string/counseling"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height_small"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:layout_marginStart="@dimen/margin_padding_size_xsmall"
            android:layout_marginEnd="@dimen/margin_padding_size_xsmall"
            android:background="@drawable/bg_round8_brand1"/>

        <Button
            android:id="@+id/btn_health_diagnosis"
            style="@style/btn_style_small"
            android:text="@string/physical_checkup"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height_small"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:layout_marginStart="@dimen/margin_padding_size_xsmall"
            android:layout_marginEnd="@dimen/margin_padding_size_xsmall"
            android:background="@drawable/bg_round8_brand2"/>

        <Button
            android:id="@+id/btn_subject"
            style="@style/btn_style_small"
            android:text="@string/setting_title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height_small"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:layout_marginStart="@dimen/margin_padding_size_xsmall"
            android:layout_marginEnd="@dimen/margin_padding_size_xsmall"
            android:background="@drawable/bg_round8_brand5"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>