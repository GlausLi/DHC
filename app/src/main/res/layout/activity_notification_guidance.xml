<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/margin_padding_size_xxlarge"
    android:orientation="vertical"
    tools:context=".activity.NotificationGuidanceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/notification_guidance"
            android:layout_marginTop="@dimen/margin_padding_size_xxlarge"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginTop="@dimen/margin_padding_size_xxlarge"
            android:fontFamily="@string/font_style_1"
            android:textColor="@color/brand_8"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/intro_notification_description"
            android:lineHeight="@dimen/margin_padding_size_large" />

        <TextView
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_padding_size_xxlarge"
            android:layout_alignParentBottom="true"
            android:text="@string/intro_ok"
            android:textColor="@color/white"
            android:background="@drawable/bg_round16_brand7"
            style="@style/btn_style_large" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>