<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SelectIngredientFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/btn_prev_ingredient"
            android:layout_width="20dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/prev_ingredient"/>
        <LinearLayout
            android:id="@+id/layout_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/btn_prev_ingredient"
            app:layout_constraintEnd_toStartOf="@id/btn_next_ingredient"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_top_round15_gray"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/c1"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round15_white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/brand_7"
                android:padding="8dp"
                android:textSize="14sp"
                android:text="食欲抑制" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="ダイエットについての質問ではいと答えた方におすすめ" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toEndOf="@id/btn_prev_ingredient"
            app:layout_constraintEnd_toStartOf="@id/btn_next_ingredient"
            app:layout_constraintTop_toBottomOf="@id/layout_card_title"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_bottom_round15_white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#515459"
                android:text="アフリカマンゴノキエキス" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="14sp"
                android:text="原材料　アフリカマンゴノキエキス末" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="容　量　300mg" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="#004098"
                android:textSize="16sp"
                android:background="@drawable/bg_border_round15_brand7"
                android:text="詳しく見る"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/bg_round16_brand7"
                android:text="この成分をくわえる"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1/32"
                android:layout_gravity="end"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_next_ingredient"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/next_ingredient"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="DHC パーソナルサプリ SELECT3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="30日分 / ￥0,000" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#004098"
        android:background="@android:color/transparent"
        android:text="@string/btn_choose_ingredient" />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/bg_round16_brand7"
        android:text="@string/btn_ok_ingredient"/>
</LinearLayout>
</ScrollView>