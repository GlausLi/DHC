<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_padding_size_medium"
    android:paddingBottom="@dimen/margin_padding_size_medium"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_padding_size_small"
        app:srcCompat="@drawable/ic_icon_information" />

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_medium"
        android:text="TextView" />

    <ImageView
        android:layout_width="@dimen/item_arrow_width"
        android:layout_height="@dimen/item_arrow_width"
        android:layout_marginStart="@dimen/margin_padding_size_medium"
        android:layout_marginEnd="@dimen/margin_padding_size_medium"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_right_arrow" />
</LinearLayout>