<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ServiceIntroFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/title"
            android:layout_marginBottom="@dimen/margin_padding_size_xlarge"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/description"
            android:fontFamily="@string/font_style_1"
            android:textColor="@color/brand_8"
            android:textSize="@dimen/text_size_large"
            android:textAlignment="center"
            android:lineHeight="@dimen/size_26"
            android:layout_marginBottom="@dimen/margin_padding_size_xsmall" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/intro_description_height"
            android:layout_alignParentBottom="true"
            android:fontFamily="@string/font_style_1"
            android:textColor="@color/brand_8"
            android:textSize="@dimen/text_size_medium"
            android:lineHeight="@dimen/margin_padding_size_large" />

    </RelativeLayout>

</FrameLayout>